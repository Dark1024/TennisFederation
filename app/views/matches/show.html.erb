<%- model_class = Match -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:player_home_id) %>:</strong></dt>
  <dd><%= @match.player_home_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:player_visit_id) %>:</strong></dt>
  <dd><%= @match.player_visit_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:winner) %>:</strong></dt>
  <dd><%= @match.winner %></dd>
  <dt><strong><%= model_class.human_attribute_name(:result_id) %>:</strong></dt>
  <dd><%= @match.result_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:game1) %>:</strong></dt>
  <dd><%= @match.game1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:game2) %>:</strong></dt>
  <dd><%= @match.game2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:game3) %>:</strong></dt>
  <dd><%= @match.game3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:game4) %>:</strong></dt>
  <dd><%= @match.game4 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:game5) %>:</strong></dt>
  <dd><%= @match.game5 %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              matches_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_match_path(@match), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              match_path(@match),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
